<h1><%= @product.name %></h1>
<p><%= @product.description%></p>
<p>Price: $<%= @product.formatted_price%></p>

<br/>
<br/>

<% if current_user %>
  <h3>Reviews</h3>
  <p>Reviews for <%= @product.name%></p>

  <% @product.reviews.each do |review| %>
  <p>
    <%= review.comment %>
    <br>
    <% if review.user !=nil %>
      <em> by <%= review.user.email %></em>
      Added on: <%= review.created_at %>
    <% end %>
  </p>
  <% end %>
<% end %>
<p>Back to <%= link_to "Products Page", products_path %> | <%= link_to "Edit Product", edit_product_path(@product) %> </p>
